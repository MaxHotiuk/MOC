@{
    ViewData["Title"] = "Print File";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.FileName</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        pre {
            white-space: pre-wrap;
            word-wrap: break-word;
        }
    </style>
</head>
<body>
    <h2>@ViewBag.FileName</h2>
    <pre>@ViewBag.FileContent</pre>

    <script>
        window.onload = function() {
            window.print();
        };
    </script>
</body>
</html>