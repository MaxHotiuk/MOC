@{
    ViewData["Title"] = "Frequency Table";
}

<h2>Frequency Table</h2>

@if (ViewBag.FrequencyTable != null)
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Character</th>
                <th>Count</th>
                <th>Percentage</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.FrequencyTable)
            {
                <tr>
                    <td>@item.Key</td>
                    <td>@item.Value["Count"]</td>
                    <td>@item.Value["Percentage"]%</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">No frequency data available.</div>
}

<a asp-controller="EncryptDecrypt" asp-action="Files" class="btn btn-secondary">Back to Files</a>