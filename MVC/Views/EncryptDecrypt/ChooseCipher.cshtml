@{
    ViewData["Title"] = "Choose Cipher";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h2 class="h4 mb-0">Select Encryption Method</h2>
                </div>
                <div class="card-body">
                    <form asp-action="ChooseCipher" method="post">
                        <input type="hidden" name="fileId" value="@ViewBag.FileId" />

                        <div class="mb-4">
                            <label class="form-label">Encryption Method</label>
                            <select name="cipher" class="form-select">
                                <option value="Caesar">Caesar Cipher</option>
                                <option value="Tritemius">Tritemius Cipher</option>
                                <option value="XOR">XOR Cipher</option>
                                <option value="Knapsack">Knapsack Cipher</option>
                                <option value="RSA">RSA</option>
                            </select>
                            <div class="form-text">
                                Choose the encryption method you want to use for your file.
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Files" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Back to Files
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-arrow-right me-2"></i>Continue
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .upload-area {
            transition: all 0.3s ease;
        }
        
        .upload-area:hover {
            background-color: #f8f9fa;
            border-color: #0d6efd;
        }
        
        .progress {
            background-color: #e9ecef;
            border-radius: 0.25rem;
        }
        
        code {
            background-color: #f8f9fa;
            padding: 0.2rem 0.4rem;
            border-radius: 0.25rem;
        }
    </style>
}