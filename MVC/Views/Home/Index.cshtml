@{
    ViewData["Title"] = "Home";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="h3 mb-0">Welcome to File Encryptor/Decryptor</h2>
    </div>

    <div class="card">
        <div class="card-body">
            <p class="lead">A secure application for encrypting and decrypting your files.</p>

            @if (User.Identity?.IsAuthenticated == true)
            {
                <div class="alert alert-success mt-4">
                    <h4 class="h5 mb-2">Hello!</h4>
                    <p class="mb-0">You are now logged in. Start by uploading a file to encrypt or decrypt.</p>
                    <a asp-controller="EncryptDecrypt" asp-action="Index" class="btn btn-primary mt-3">
                        <i class="bi bi-upload me-2"></i>Upload File
                    </a>
                </div>
            }
            else
            {
                <div class="alert alert-info mt-4">
                    <h4 class="h5 mb-2">Get Started</h4>
                    <p class="mb-0">To use this application, please log in or register if you don't have an account yet.</p>
                    <div class="mt-3">
                        <a asp-controller="Account" asp-action="Login" class="btn btn-primary">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Log In
                        </a>
                        <a asp-controller="Account" asp-action="Register" class="btn btn-secondary">
                            <i class="bi bi-person-plus me-2"></i>Register
                        </a>
                    </div>
                </div>
            }

            <div class="mt-5">
                <h2 class="h4 mb-3">How It Works</h2>
                <p>This application allows you to:</p>
                <ul class="list-unstyled">
                    <li>📁 <strong>Upload files</strong> for encryption or decryption.</li>
                    <li>🔒 <strong>Encrypt files</strong> using secure algorithms (e.g., Caesar Cipher).</li>
                    <li>🔓 <strong>Decrypt files</strong> that were previously encrypted.</li>
                    <li>📥 <strong>Download</strong> your processed files securely.</li>
                    <li>🖨️ <strong>Print</strong> your files directly from the browser.</li>
                </ul>
                <p>Start by uploading a file or logging in to access your files.</p>
            </div>
        </div>
    </div>
</div>